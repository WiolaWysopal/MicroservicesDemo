// apps/products-service/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client/products"
}

datasource db {
  provider = "sqlite"
  url      = "file:./products.db"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  quantity    Int
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}